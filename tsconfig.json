{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["server/src/renderer/components/*"],
      "@common/*": ["server/src/common/*"],
      "@main/*": ["server/src/main/*"],
      "@renderer/*": ["server/src/renderer/*"],
      "@src/*": ["server/src/*"],
      "@misc/*": ["./misc/*"],
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"],
    }
  },
  "include": ["src/**/*"]
}
